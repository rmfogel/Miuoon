                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
               
               

            </Grid.ColumnDefinitions>
            <Label Name="lblHospitalName" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="26"  FontSize="18"  HorizontalContentAlignment="Center"></Label>

            <Label Grid.Row="2" Grid.Column="19" Grid.ColumnSpan="4" Content=" כניסת ממתין" FontSize="15"></Label>
            <Label Grid.Row="2" Grid.Column="15" Grid.ColumnSpan="4" Content="יציאת ממתין " FontSize="15" ></Label>
            <Label Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="4"  Content=" כניסת  צוות  " FontSize="15"></Label>
            <Label Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="4" Content="  יציאת  צוות  " FontSize="15"></Label>

        </Grid>
